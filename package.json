{
  "name": "zotero-metadata-search-plugin",
  "type": "module",
  "version": "0.0.3",
  "description": "Update Zotero items with metadata from bibliographic databases like CrossRef.org and DBLP.org",
  "config": {
    "addonName": "Metadata Search",
    "addonID": "metadatasearch@emptysquare.net",
    "addonRef": "metadatasearch",
    "addonInstance": "MetadataSearch",
    "prefsPrefix": "extensions.zotero.metadatasearch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ajdavis/zotero-metadata-search-plugin.git"
  },
  "author": "ajdavis",
  "bugs": {
    "url": "https://github.com/ajdavis/zotero-metadata-search-plugin/issues"
  },
  "homepage": "https://github.com/ajdavis/zotero-metadata-search-plugin#readme",
  "license": "AGPL-3.0-or-later",
  "scripts": {
    "start": "zotero-plugin serve",
    "build": "zotero-plugin build && tsc --noEmit",
    "lint:check": "prettier --check . && eslint .",
    "lint:fix": "prettier --write . && eslint . --fix",
    "release": "zotero-plugin release",
    "test": "zotero-plugin test",
    "update-deps": "npm update --save"
  },
  "dependencies": {
    "zotero-plugin-toolkit": "^5.1.0-beta.4"
  },
  "devDependencies": {
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.10.1",
    "@zotero-plugin/eslint-config": "^0.6.7",
    "chai": "^5.2.1",
    "eslint": "^9.39.1",
    "mocha": "^11.7.5",
    "prettier": "^3.7.3",
    "typescript": "^5.9.3",
    "zotero-plugin-scaffold": "^0.8.2",
    "zotero-types": "^4.1.0-beta.1"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "endOfLine": "lf",
    "overrides": [
      {
        "files": [
          "*.xhtml"
        ],
        "options": {
          "htmlWhitespaceSensitivity": "css"
        }
      }
    ]
  }
}
